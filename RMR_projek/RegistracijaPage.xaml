<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RMR_projek.RegistracijaPage"
             Title="RegistracijaPage">
    <ScrollView>

        <VerticalStackLayout>



            <Entry
                x:Name="UporabniskoImeEntry"
                Placeholder="Vnesite poÅ¡tni naslov"
                HorizontalOptions="FillAndExpand"
                 Margin="10,20,0,0"
                />

            <Entry
                x:Name="GesloEntry"
                Placeholder="Vnesite geslo"
                HorizontalOptions="FillAndExpand"
                IsPassword="true" 
                 Margin="10,0,0,0"
                />




            <Button
                x:Name="novaRegistracijaBtn"
                Text="Registracija"
               Command="{Binding RegistracijaUporabnika}"
                WidthRequest="200"
                  Margin="5,20,0,0"
               
                />

        </VerticalStackLayout>



    </ScrollView>
</ContentPage>